<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <Header>
        <Title>Add a REVIEW item</Title>
        <Author>Clyde D'Souza</Author>
        <Shortcut>fc-review</Shortcut>
        <Description>Inserts a single REVIEW item in the page which can then potentially be seen in task list.</Description>
        <SnippetTypes>
            <SnippetType>Expansion</SnippetType>
        </SnippetTypes>
    </Header>
    <Snippet>
        <Declarations>
            <Literal>
                <ID>reviewDescription</ID>
                <ToolTip>Enter a suitable description for this REVIEW item.</ToolTip>
                <Default>Found this while refactoring.</Default>
            </Literal>
        </Declarations>
        <Code Language="XML">
<![CDATA[
<!-- REVIEW: $reviewDescription$ -->
$end$]]>
        </Code>
    </Snippet>
</CodeSnippet>